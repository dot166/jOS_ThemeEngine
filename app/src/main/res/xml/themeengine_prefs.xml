<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:title="@string/enable_themeengine"
        android:key="pref_enablethemeengine"
        android:defaultValue="true"/>

    <ListPreference
        android:title="@string/theme_settings"
        android:key="pref_theme"
        android:summary="@string/global_theme_settings"
        android:defaultValue="jOS"
        android:entries="@array/themes"
        android:entryValues="@array/themesConfig" />

</androidx.preference.PreferenceScreen>